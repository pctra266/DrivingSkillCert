<Page x:Class="DrivingSkillCert.RegistrationCourse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DrivingSkillCert"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationCourse">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Danh sách khóa học" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- DataGrid hiển thị danh sách khóa học -->
        <DataGrid x:Name="CoursesDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã khóa học" 
                                    Binding="{Binding CourseId}" Width="*"/>
                <DataGridTextColumn Header="Tên khóa học" 
                                    Binding="{Binding CourseName}" Width="*"/>
                <DataGridTextColumn Header="Giáo viên" 
                                    Binding="{Binding TeacherFullName}" Width="*"/>
                <DataGridTextColumn Header="Ngày bắt đầu" 
                                    Binding="{Binding StartDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="*"/>
                <DataGridTextColumn Header="Ngày kết thúc" 
                                    Binding="{Binding EndDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút đăng ký -->
        <Button x:Name="btnRegister" 
                Content="Đăng ký khóa học" 
                Grid.Row="2" Width="150" Height="30" 
                HorizontalAlignment="Right" Margin="0,10,0,0" 
                Click="btnRegister_Click"/>
    </Grid>
</Page>
