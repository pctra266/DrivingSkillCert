<Page x:Class="DrivingSkillCert.ExamStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DrivingSkillCert"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ExamStudent">

    <Grid Background="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <Button x:Name="btnBack"
                    Content="Back"
                    Click="btnBack_Click"
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            <Button x:Name="btnRefresh"
                    Content="Refresh"
                    Click="btnRefresh_Click"
                    Padding="10,5"/>
            <TextBlock x:Name="txtStudentName"
                       FontSize="14"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Exams List -->
        <DataGrid Grid.Row="1"
                  x:Name="dgExams"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Collapsed"
                                    Header="Exam ID"
                                    Binding="{Binding ExamItem.ExamId}"
                                    Width="50"/>
                <DataGridTextColumn Header="Course Name"
                                    Binding="{Binding ExamItem.Course.CourseName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding ExamItem.Date}"
                                    Width="*"/>
                <DataGridTextColumn Header="Room"
                                    Binding="{Binding ExamItem.Room}"
                                    Width="*"/>
                <DataGridTextColumn Header="Type"
                                    Binding="{Binding ExamItem.Type}"
                                    Width="*"/>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="btnDoExam"
                                        Content="Do the exam"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding IsTheory}"
                                        IsEnabled="{Binding IsValid}"
                                        Click="btnDoExam_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>