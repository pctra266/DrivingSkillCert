<Page x:Class="DrivingSkillCert.DoTheoryExam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DrivingSkillCert"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="800"
      Title="DoTheoryExam">
    <Grid Background="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <TextBlock x:Name="txtExamInfo"
                       FontSize="16"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            <TextBlock x:Name="txtTimer"
                       FontSize="16"
                       Foreground="Red"
                       VerticalAlignment="Center"
                       Text="Time Left: 25:00"/>
            <Button x:Name="btnSubmit"
                    Content="Submit Exam"
                    Click="btnSubmit_Click"
                    Margin="20,0,0,0"
                    Padding="10,5"/>
        </StackPanel>

        <!-- Questions List -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="icQuestions"
                          Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Wheat"
                                Margin="0,0,0,10"
                                Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding QuestionText}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding Answers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding AnswerText}"
                                                         GroupName="{Binding QuestionId, StringFormat='Q{0}'}"
                                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                         Margin="0,0,0,5"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Click="btnCancel_Click"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>