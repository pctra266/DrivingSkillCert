<Window x:Class="DrivingSkillCert.UserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrivingSkillCert"
        mc:Ignorable="d"
        Title="UserControl" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="PapayaWhip"  Height="30" CornerRadius="3" Padding="7">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <!-- Header và các nút điều hướng -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnBack" Content="Back" Click="btnBack_Click" Margin="0,0,10,0" Padding="10,5"/>
           
        </StackPanel>

        <!-- Danh sách Certificate -->
        <DataGrid Grid.Row="1" x:Name="dgCertificates" AutoGenerateColumns="False" 
                  Margin="10" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="CertificateId" Binding="{Binding CertificateId}" Width="50"/>
                <DataGridTextColumn Header="Certificate Code" Binding="{Binding CertificateCode}" Width="80"/>
                <DataGridTextColumn Header="Issued Date" Binding="{Binding IssuedDate}" Width="100"/>
                <DataGridTextColumn Header="Expiration Date" Binding="{Binding ExpirationDate}" Width="100"/>
          
            </DataGrid.Columns>
        </DataGrid>

        
    </Grid>
</Window>
