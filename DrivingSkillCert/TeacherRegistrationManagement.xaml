<Page x:Class="DrivingSkillCert.TeacherRegistrationManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DrivingSkillCert"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherRegistrationManagement">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Danh sách đăng ký khóa học của bạn" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10" />

        <!-- DataGrid hiển thị danh sách đăng ký -->
        <DataGrid x:Name="RegistrationsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã đăng ký" 
                                    Binding="{Binding RegistrationId}" Width="*"/>
                <DataGridTextColumn Header="Tên học sinh" 
                                    Binding="{Binding StudentName}" Width="*"/>
                <DataGridTextColumn Header="Email" 
                                    Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Khóa học" 
                                    Binding="{Binding CourseName}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" 
                                    Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Ghi chú" 
                                    Binding="{Binding Comments}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút xử lý duyệt đăng ký -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnApprove" Content="Duyệt" 
                    Width="100" Margin="0,0,10,0" 
                    Click="btnApprove_Click"/>
            <Button x:Name="btnReject" Content="Từ chối" 
                    Width="100" Click="btnReject_Click"/>
        </StackPanel>
    </Grid>
</Page>
